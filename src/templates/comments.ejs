<html lang="en"></html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/static/comments.css">
</head>
<body>
    <h1><%= heading %></h1> 
    <% comments.forEach((comment) => { %>
        <div class="comment_box">
            <h3><%= comment.title %></h3>
            <div class="comment">
                <div class="photo">
                    <p><%= comment.author %></p>
                    <img src="<%= comment.authorImg %>" alt="" />
                </div>
                <div class="message">
                    <p><%= comment.message %></p>
                </div>
            </div>
        </div>
    <% }) %>
</body>
</html>